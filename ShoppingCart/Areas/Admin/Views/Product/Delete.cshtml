@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
       
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                    <button type="submit" asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </form>
                </div>
      
      
    </div>
